{
  "manifest_version": 3,
  "name": "MyUT NIM Otologin by Fikry",
  "version": "2.2",
  "description": "Otoinput NIM dan Otologin MyUT. Klik ikon untuk mengatur NIM.",
  
  "permissions": [
    "storage"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_title": "Otologin NIM MyUT",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://myut.ut.ac.id/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}